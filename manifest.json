{
	"manifest_version": 2,
	
	"name": "Share Doc to Classroom",
	"description": "An extension to help teachers share Docs to Google Classroom",
	
	"version": "0.7",
	
	"icons": {
		"8": "icons/icon8.png",
		"16": "icons/icon16.png",
		"28": "icons/icon28.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png"
	},
	
	"browser_action": {
    	"default_title": "Open the options page for Share Doc to Classroom",
    	"default_icon": "icons/icon32.png"
  	},
  	
  	"background": {
		"scripts": [
			"hot-reload.js",
			"chrome-promise.js",
			"background.js"
		]
	},
	
	"options_ui": {
    	"page": "options.html",
    	"chrome_style": true
  	},
	
	"content_scripts": [
		{
			"matches": ["https://docs.google.com/sharing/*"],
			"js": ["inject.js"],
			"all_frames": true,
			"run_at": "document_end"
		},
		{
			"matches": ["https://docs.google.com/sharing/*"],
			"js": ["inject.js"],
			"all_frames": true,
			"run_at": "document_idle"
		},
		{
			"matches": ["https://docs.google.com/document/*"],
			"css": ["doc.css"],
			"run_at": "document_start"
		},
		{
			"matches": ["https://docs.google.com/document/*"],
			"css": ["doc.css"]
		}
	],
	
	"permissions": [
		"storage"
	],
	
	"web_accessible_resources": [
    		"images/*"
  	]
}
